{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "strictNullChecks": true,
    "preserveSymlinks": true
  },
  "include": [
    "src",
    "examples"
  ]
}
