{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "strictNullChecks": true,
    "preserveSymlinks": true,
    "outDir": "build",
    "types": [
      "vite/client"
    ]
  }
}
