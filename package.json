{
  "name": "createdapp",
  "private": true,
  "engines": {
    "node": ">=10",
    "pnpm": ">=3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lint": "wsrun -c -s lint",
    "lint:fix": "wsrun -c -s lint:fix",
    "build": "wsrun -e -c -s build",
    "test": "wsrun -e -c -s --exclude-missing test",
    "release": "pnpm build && pnpm changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.14.1",
    "ethers": "5.5.4",
    "prettier": "2.1.2",
    "wsrun": "^5.2.1"
  },
  "resolutions": {
    "ethers": "5.5.1"
  }
}
